<p id="notice"><%= notice %></p>

<h2><%= @event.name %></h2>
  
<div>
  <strong>Description</strong>
  <p>
    <%= @event.description %>
  </p>
</div>

<p>
  <strong>Location:</strong>
  <%= @event.location %>
</p>

<p>
  <strong>Date:</strong>
  <%= @event.date %>
</p>

<p>
  <strong>Creator:</strong>
  <%= @event.creator.name %>
</p>

<ul class="event_attendees">
  <h3>Attendees</h3>
  <% @event.invited.each do | attendee | %>
    <li><%= attendee.name %></li>
  <% end %>
</ul>

<% if user_signed_in? && current_user == @event.creator %>
  <%= link_to 'Invite Attendees', new_event_invitation_path(@event) %><br>
<% end %>

<%= link_to 'Back', events_path %>
<% if user_signed_in? && current_user == @event.creator %>
  | <%= link_to 'Edit', edit_event_path(@event) %> |
  <%= link_to 'Delete', @event, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>