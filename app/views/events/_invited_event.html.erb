<div>
  <h3>
    <%= event.name %>
  </h3>
  <p class="event-date">
    Date:
    <%= event.date %>
  </p>
  <p class="event-location">
    Location:
    <%= event.location %>
  </p>
  <p class="event-creator">
    Creator:
    <%= event.creator.name %>
  </p>
  <p class="event-description">
    <p>Description:</p>
    <p>
      <%= event.description %>
    </p>
  </p>
  <p class="invitation_status">
    Invitation status: <%= current_user.event_invite(event).status.humanize %>
  </p>

  <%= form_with model: current_user.event_invite(event) do |form| %>
    <h3>Change invitation status</h3>
    <%= form.select :status, {'Attending' => 1, 'Not Attending' => 0 } %>
    <%= form.submit 'save' %>
  <% end %>
  
</div>