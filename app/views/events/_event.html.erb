<div class="event-container">
  <div class="event">
    <h3 class="event-name">
      <%= event.name %>
    </h3>
    <p class="event-date">
      Date: <%= event.date %>
    </p>
    <p class="event-location">
      Location: <%= event.location %>
    </p>
    <p class="event-creator">
      Creator: <%= event.creator.name %>
    </p>
  </div>
  <div class="event-actions">
    <%= link_to 'Show', event %>
  </div>
</div>